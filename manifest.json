{
	// おまじない
	"manifest_version": 2,
	// 拡張機能の名前
	"name": "My First Extensions in SRI",
	// 拡張機能の名前
	"version": "0.1",
	// 拡張機能の詳細
	"description": "ポップアップのテスト",

	// バックグラウンドで動くものを規定
	"background": {
		"scripts": ["background.js"]
	},

	// ブラウザアクション（ブラウザ上でクリックできるようなアイコンが現れる）
	"browser_action": {
		"default_icon": "./icon/12.jpg",
		"default_title": "This is My First Extensions."
 	},

 	// 開いているページに関する設定
 	"content_scripts": [{
 	  // この拡張機能が動くドメインを指定できる（twitterのところでしか動かない拡張機能を作るとか）
      "matches": ["http://*/*", "https://*/*"],
      // 開いてるページで読み込むjsを書く
      "js": ["js/jquery.js"]
      // その他CSSなども可能
 	}],
  	"permissions": ["tabs"]
}